<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgtitanium"
    android:id="@+id/viewMain"
    >
    
    	<RelativeLayout android:id="@+id/layoutHeaderMain"
		android:layout_width="fill_parent"
		android:layout_height="30dp"
		android:layout_gravity="center_horizontal"
		android:background="#A0909090">
               <ImageView android:id="@+id/radioModeImage"
 		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_marginTop="3px"
			android:layout_marginRight="3px"
			android:gravity="right"
			android:layout_toRightOf="@+id/radioModeLabel"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:src="@drawable/logo25"
			/>
		<TextView android:id="@+id/radioModeText"
 		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"           
            android:text="powered by hyk-proxy Project  "
			android:layout_marginTop="8px"
			android:layout_marginRight="0px"
			android:gravity="right"
			android:layout_toLeftOf="@+id/radioModeImage"
            android:textColor="#cccccc" />
	</RelativeLayout>
    <RelativeLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
 
    >
    <!--
    <ImageView
		android:id="@+id/imgStatus"
		android:layout_margin="15dip"
		android:layout_width="fill_parent"
		android:layout_height="320dip"
		android:src="@drawable/logo320"
		android:layout_gravity="center_horizontal"
		/>
    -->
		
		  
	<TextView android:id="@+id/statusview"
		android:gravity="left"
		android:textStyle="bold"
		android:layout_width="fill_parent"
		android:layout_height="360dip"
		android:textColor="#ff00ff00"
		android:layout_gravity="center_horizontal"
		 />
		 
	 <Button android:id="@+id/triggerbutton" 
            android:layout_width="80px" 
            android:layout_height="fill_parent" 
             android:text="Start"      
             android:layout_margin="0sp"
      android:layout_below="@+id/statusview"
       android:drawableLeft="@drawable/player_play"
       android:gravity="left|center_vertical"
            />
     <Button android:id="@+id/configbutton" 
             android:layout_width="80px" 
             android:layout_height="fill_parent" 
             android:text="Config"        
             android:layout_margin="0sp"
             android:layout_below="@+id/statusview"
             android:layout_toRightOf="@+id/triggerbutton"
             android:drawableLeft="@drawable/configure"
             android:gravity="left|center_vertical"
             
            />
      <Button android:id="@+id/helpbutton" 
             android:layout_width="80px" 
             android:layout_height="fill_parent" 
             android:text="Help"        
             android:layout_margin="0sp"
             android:layout_below="@+id/statusview"
             android:layout_toRightOf="@+id/configbutton"
             android:drawableLeft="@drawable/help"
             android:gravity="left|center_vertical"
            />
      <Button android:id="@+id/exitbutton" 
           android:layout_width="80px" 
            android:layout_height="fill_parent" 
             android:text="Exit"        
             android:layout_margin="0sp"
             android:layout_below="@+id/statusview"
             android:layout_toRightOf="@+id/helpbutton"
             android:drawableLeft="@drawable/exit"
             android:gravity="left|center_vertical"
            />
	</RelativeLayout>

</LinearLayout>


